<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-md">
    <div class="flex justify-between border-b border-gray-200">
      <button class="w-1/2 py-2 text-center text-blue-600 font-semibold border-b-2 border-blue-600">ログイン</button>
      <%= link_to '新規登録', new_user_path, class: "w-1/2 py-2 text-center text-gray-600 block" %>
    </div>
    <div class="p-6 bg-gray-50">
      <h1 class="text-2xl font-bold mb-4">Hello</h1>
      <%= form_with url: login_path, local: true, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2" %>
        </div>
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2" %>
        </div>
        <%= f.submit "ログイン", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>
      <div class="text-center mt-4 space-y-2">
        <%= link_to 'パスワードをお忘れの方はこちら', '#', class: "text-blue-600 hover:text-blue-900 block" %>
      </div>
    </div>
  </div>
</div>

