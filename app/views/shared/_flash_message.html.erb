<div class="container mx-auto px-4">
  <% flash.each do |message_type, message| %>
    <div class="<%= flash_background_color(message_type) %> px-4 py-3 rounded relative flash-message" role="alert" style="margin-top: 100px;" onclick="this.style.display='none';">
      <strong class="block sm:inline"><%= message_type == 'errors' ? 'ユーザー登録に失敗しました' : message %></strong>
      <% if message_type == 'errors' && message.is_a?(Array) %>
        <ul class="list-disc pl-5 mt-2">
          <% message.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>
