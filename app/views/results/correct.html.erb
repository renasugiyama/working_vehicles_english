<div class="question-container flex justify-center items-center min-h-screen bg-green-100 relative overflow-hidden z-10">
  <div class="question-card bg-white shadow-lg rounded-lg p-6 text-center animate__animated animate__zoomIn">
    <h1 class="question-content text-2xl font-bold mb-4 text-green-600 animate-pulse">🙆</h1>
    <h1 class="question-content text-2xl font-bold mb-4 text-green-600 animate__flipInX">Congratulations! You got it right!</h1>
    <p class="mb-6">Let's move on to the next question!</p>
    <div class="choice-buttons flex justify-center space-x-4">
      <%= link_to 'Next', random_question_path, class: "choice-button bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 transition duration-300 transform hover:scale-105" %>
    </div>
  </div>
</div>

<!-- 音声ファイルのパスを指定 -->
<audio id="correct-sound" src="/正解6.mp3" preload="auto"></audio>

<script>
    // 音を再生する関数
    function playCorrectSound() {
        const audio = document.getElementById('correct-sound');
        audio.play();
    }

    // ページがロードされたときに音を再生
    window.onload = playCorrectSound;
</script>