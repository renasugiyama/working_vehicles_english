<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-screen-sm p-6" style="width: 800px;">
    <div class="p-6 bg-gray-50">
      <h1 class="text-2xl font-bold mb-4">詳細</h1>
      <h1 class="mb-4"><%= @question.content %></h1>
      <div class="mb-4">
        <%= image_tag @question.question_image.url, width: 400, height: 400, class: "mb-4" if @question.question_image.present? %>
      </div>
      <ul class="mb-4">
        <% @question.choices.each do |choice| %>
          <li class="mb-2 <%= 'text-green-500 font-bold' if choice.is_correct %>">
            <%= choice.content %> 
            <% if choice.is_correct %>
              <span class="text-green-500 font-bold">(正解)</span>
            <% end %>
          </li>
        <% end %>
      </ul>
      <div class="space-y-3">
        <%= link_to '編集', edit_question_path(@question), class: "text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md shadow-sm" %>
        <%= link_to '戻る', questions_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
      </div>
    </div>
  </div>
</div>


