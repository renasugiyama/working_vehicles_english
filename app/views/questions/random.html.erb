<!-- app/views/questions/random.html.erb -->
<div class="question-container">
  <div class="question-card">
    <div class="p-6 bg-gray-50 text-center">
      <%= image_tag @question.question_image.url, width: 500, height: 500, class: "question-image mx-auto mb-4" if @question.question_image.present? %>
      <h1 class="question-content text-xl font-semibold mb-2"><%= @question.content %></h1>
      <div class="choice-buttons flex justify-center space-x-4">
        <% @question.choices.each do |choice| %>
          <button class="choice-button bg-gray-200 text-black px-4 py-2 rounded-md"><%= choice.content %></button>
        <% end %>
      </div>
    </div>
    <div class="action-buttons flex justify-between p-4">
      <%= link_to '編集', edit_question_path(@question), class: "edit-button bg-blue-500 text-white px-4 py-2 rounded-md" %>
      <%= link_to '戻る', questions_path, class: "back-button bg-gray-500 text-white px-4 py-2 rounded-md" %>
    </div>
  </div>
</div>
