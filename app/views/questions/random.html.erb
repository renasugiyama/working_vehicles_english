<!-- app/views/questions/random.html.erb -->
<div class="question-container flex flex-col justify-center min-h-screen">
  <div class="question-card">
    <div class="p-6 bg-gray-50 text-center">
      <%= image_tag @question.question_image.url, width: 500, height: 500, class: "question-image mx-auto mb-4" if @question.question_image.present? %>
      <h1 class="question-content text-xl font-semibold mb-2"><%= @question.content %></h1>
      <div class="choice-buttons flex justify-center space-x-4">
        <% @question.choices.each do |choice| %>
          <%= link_to check_result_path(choice), method: :get, class: "choice-button bg-gray-200 text-black px-4 py-2 rounded-md" do %>
            <%= choice.content %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
