<!-- app/views/users/settings.html.erb -->
<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-md p-8">
    <h1 class="text-2xl font-semibold text-center mb-6">設定</h1>

    <div class="grid grid-cols-2 gap-6">

    <!-- マイページ -->
      <%= link_to mypage_display_path, class: "bg-blue-500 text-white text-center py-4 rounded-lg shadow-md transition-transform transform hover:scale-105" do %>
        <div class="flex flex-col items-center">
          <svg class="h-8 w-8 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>マイページ</span>
        </div>
      <% end %>

      <!-- パスワード変更 -->
      <%= link_to new_password_reset_path, class: "bg-gray-500 text-white text-center py-4 rounded-lg shadow-md transition-transform transform hover:scale-105" do %>
        <div class="flex flex-col items-center">
          <svg class="h-8 w-8 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
          </svg>
          <span>パスワード変更</span>
        </div>
      <% end %>

      <!-- メールアドレス変更 -->
      <%= link_to edit_email_user_path(current_user), class: "bg-green-500 text-white text-center py-4 rounded-lg shadow-md transition-transform transform hover:scale-105" do %>
        <div class="flex flex-col items-center">
          <svg class="h-8 w-8 mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
            <polyline points="22,6 12,13 2,6" />
          </svg>
          <span>メールアドレス変更</span>
        </div>
      <% end %>

      <!-- ユーザー削除 -->
      <%= link_to '#', class: "bg-red-500 text-white text-center py-4 rounded-lg shadow-md transition-transform transform hover:scale-105" do %>
        <div class="flex flex-col items-center">
          <!-- 新しいアイコン -->
          <svg class="h-8 w-8 mb-2"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  
            <path d="M21 4H8l-7 8 7 8h13a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" />  
            <line x1="18" y1="9" x2="12" y2="15" />  
            <line x1="12" y1="9" x2="18" y2="15" />
          </svg>
          <span>ユーザー削除</span>
        </div>
      <% end %>

      <!-- アワード -->
      <%= link_to '#', class: "bg-teal-500 text-white text-center py-4 rounded-lg shadow-md transition-transform transform hover:scale-105" do %>
          <div class="flex flex-col items-center">
            <!-- アイコンを追加 -->
            <svg class="h-8 w-8 mb-2"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  
              <circle cx="12" cy="8" r="7" />  
              <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88" />
            </svg>
            <span>アワード</span>
          </div>
      <% end %>

      <!-- 音声切替 -->
      <%= link_to '#', class: "bg-yellow-500 text-white text-center py-4 rounded-lg shadow-md transition-transform transform hover:scale-105" do %>
        <div class="flex flex-col items-center">
          <!-- アイコンを追加 -->
          <svg class="h-8 w-8 mb-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  
            <path stroke="none" d="M0 0h24v24H0z"/>  
            <path d="M15 8a5 5 0 0 1 0 8" />  
            <path d="M17.7 5a9 9 0 0 1 0 14" />  
            <path d="M6 15 h-2a1 1 0 0 1 -1 -1v-4a1 1 0 0 1 1 -1h2l3.5 -4.5a.8 .8 0 0 1 1.5 .5v14a.8 .8 0 0 1 -1.5 .5l-3.5 -4.5" />
          </svg>
          <span>音声切替</span>
        </div>
      <% end %>

    </div>
  </div>
</div>