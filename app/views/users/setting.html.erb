<!-- app/views/users/settings.html.erb -->
<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-md p-8">
    <h1 class="text-3xl font-semibold text-center mb-6">設定</h1>
    <p class="text-center text-gray-500 mb-4"></p>

    <div class="grid grid-cols-2 gap-6">
      <!-- マイページ -->
      <%= link_to mypage_display_path, class: "bg-white border rounded-lg shadow-md p-4 flex flex-col items-center hover:shadow-lg transition-transform transform hover:scale-105" do %>
        <svg class="h-8 w-8 mb-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="text-sm font-medium">マイページ</span>
      <% end %>

      <!-- パスワード変更 -->
      <%= link_to new_password_reset_path, class: "bg-white border rounded-lg shadow-md p-4 flex flex-col items-center hover:shadow-lg transition-transform transform hover:scale-105" do %>
        <svg class="h-8 w-8 mb-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
        </svg>
        <span class="text-sm font-medium">パスワード変更</span>
      <% end %>

      <!-- メールアドレス変更 -->
      <%= link_to edit_email_user_path(current_user), class: "bg-white border rounded-lg shadow-md p-4 flex flex-col items-center hover:shadow-lg transition-transform transform hover:scale-105" do %>
        <svg class="h-8 w-8 mb-2 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
          <polyline points="22,6 12,13 2,6" />
        </svg>
        <span class="text-sm font-medium">メールアドレス変更</span>
      <% end %>

      <!-- ユーザー削除 -->
      <%= link_to user_path(@user), method: :delete, data: { confirm: 'ユーザーを削除すると今までのデータが全て削除されます。本当に削除しますか？' }, class: "bg-white border rounded-lg shadow-md p-4 flex flex-col items-center hover:shadow-lg transition-transform transform hover:scale-105" do %>
        <svg class="h-8 w-8 mb-2 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
          <circle cx="8.5" cy="7" r="4" />
          <line x1="18" y1="8" x2="23" y2="13" />
          <line x1="23" y1="8" x2="18" y2="13" />
        </svg>
        <span class="text-sm font-medium">ユーザー削除</span>
      <% end %>

      <!-- アワード -->
      <%= link_to '#', class: "bg-white border rounded-lg shadow-md p-4 flex flex-col items-center hover:shadow-lg transition-transform transform hover:scale-105" do %>
        <svg class="h-8 w-8 mb-2 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="8" r="7" />
          <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88" />
        </svg>
        <span class="text-sm font-medium">アワード</span>
      <% end %>

      <!-- 音声切替 -->
      <%= link_to '#', class: "bg-white border rounded-lg shadow-md p-4 flex flex-col items-center hover:shadow-lg transition-transform transform hover:scale-105" do %>
        <svg class="h-8 w-8 mb-2 text-gray-500" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" />
          <path d="M15 8a5 5 0 0 1 0 8" />
          <path d="M17.7 5a9 9 0 0 1 0 14" />
          <path d="M6 15 h-2a1 1 0 0 1 -1 -1v-4a1 1 0 0 1 1 -1h2l3.5 -4.5a.8 .8 0 0 1 1.5 .5v14a.8 .8 0 0 1 -1.5 .5l-3.5 -4.5" />
        </svg>
        <span class="text-sm font-medium">音声切替</span>
      <% end %>
    </div>
  </div>
</div>
