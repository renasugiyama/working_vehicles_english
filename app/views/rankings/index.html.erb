<div class="ranking-container pt-32 max-w-xl mx-auto">
  <h1 class="text-3xl font-bold text-center mb-6">Ranking</h1>
  
  <% if @players.present? %>
    <table class="w-full text-left border-collapse">
      <thead>
        <tr class="bg-gray-200">
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-600 uppercase">Rank</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-600 uppercase">Player</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-600 uppercase">Points</th>
        </tr>
      </thead>
      <tbody>
        <% @players.each_with_index do |player, index| %>
          <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-100' %>">
            <td class="border px-4 py-4 flex items-center space-x-2 text-xl">
              <span class="font-bold"><%= index + 1 %></span>
              <% if index + 1 == 1 %>
                <span class="text-yellow-500">⭐</span>
              <% elsif index + 1 == 2 %>
                <span class="text-gray-500">⭐</span>
              <% elsif index + 1 == 3 %>
                <span class="text-red-500">⭐</span>
              <% end %>
            </td>
            <td class="border px-4 py-4 text-lg font-semibold"><%= player.nickname %></td>
            <td class="border px-4 py-4 text-lg font-semibold text-gray-800">
              <%= player.correct_count.to_i - player.incorrect_count.to_i %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">プレイヤーが登録されていません。</p>
  <% end %>
  <%= paginate @players %>
</div>
